---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gradient-to-r from-blue-800 to-blue-600">
    <div
      class="bg-red-500 w-screen h-10 flex flex-row justify-center align-middle items-center"
    >
      <p class="font-semibold text-white">
        Attention : Ce site en cours de construction, toutes les fonctionnalit√©s
        ne sont pas encore disponibles.
      </p>
    </div>
    <slot />
  </body>
