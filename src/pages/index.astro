---
import { Image } from "@astrojs/image/components";
import Layout from "../layouts/Layout.astro";
import coder from "../../assets/illustrations/Coder.svg";
import resume from "../../assets/illustrations/Resume.svg";
import pair from "../../assets/illustrations/Pair.svg";
import profilePic from "../../assets/images/torvald.webp";
---

<Layout title="Quentin LAURENT">
  <!-- <Navbar /> -->
  <main class="xl:mx-96 mx-4 my-4 lg:my-8">
    <div class="flex justify-center align-middle mb-8">
      <Image
        class="w-48 h-48 rounded-full shadow-md"
        src={profilePic}
        alt="Photo de Quentin LAURENT"
        height={800}
        aspectRatio={1 / 1}
        format="webp"
      />
    </div>

    <div class="grid grid-rows-1 md:grid-rows-2 md:grid-flow-col gap-8">
      <a
        href="/resume"
        class="md:row-span-3 w-full h-full bg-red-500 rounded-md flex flex-col justify-center align-middle items-center p-6"
      >
        <Image
          class="w-36"
          src={resume}
          alt="Illustration d'un CV"
          aspectRatio={1 / 1}
          format="webp"
        />
        <h2 class="text-3xl p-8 font-bold text-white">Mon CV</h2>
      </a>

      <a
        href="/courses"
        class="md:col-span-2 w-full h-full bg-green-500 rounded-md flex flex-col justify-center align-middle items-center p-6"
      >
        <Image
          class="w-36"
          src={pair}
          alt="Illustration de pair programming"
          aspectRatio={1 / 1}
          format="webp"
        />
        <h2 class="text-3xl p-8 font-bold text-white">Mes cours</h2>
      </a>

      <a
        class="md:row-span-2 md:col-span-2 w-full h-full bg-yellow-500 rounded-md flex flex-col justify-center align-middle items-center p-6"
      >
        <Image
          class="w-36"
          src={coder}
          alt="Illustration d'un dÃ©veloppeur"
          aspectRatio={1 / 1}
          format="webp"
        />
        <h2 class="text-3xl p-8 font-bold text-white">Mes projets</h2>
      </a>
    </div>
  </main>
</Layout>
