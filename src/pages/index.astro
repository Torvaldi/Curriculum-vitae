---
import Layout from "../layouts/Layout.astro";
import school from "../../assets/svg/school.svg";
import certificate from "../../assets/svg/certificate.svg";
---

<Layout title="Quentin LAURENT">
  <main class="lg:mx-96 mx-4 my-4 lg:my-8 grid grid-cols-2 gap-12">
    <div
      class="group bg-slate-100 rounded-xl p-8 mb-8 border-4 border-black hover:border-blue-600 hover:cursor-pointer flex items-center"
    >
      <img
        src={school.src}
        class="w-20 text-blue-600 group-hover:text-blue-700 group-focus:text-blue-800 duration-300 transition ease-in-out"
      />
      <h2
        class="text-3xl font-bold ml-4 group-hover:text-blue-700 group-focus:text-blue-800"
      >
        Cours & formations
      </h2>
    </div>
    <div
      class="group bg-slate-100 rounded-xl p-8 mb-8 border-4 border-black hover:border-blue-600 hover:cursor-pointer flex items-center"
    >
      <img
        src={certificate.src}
        class="w-20 text-blue-600 group-hover:text-blue-700 group-focus:text-blue-800 duration-300 transition ease-in-out"
      />
      <h2
        class="text-3xl font-bold ml-4 group-hover:text-blue-700 group-focus:text-blue-800"
      >
        Curriculum Vitae
      </h2>
    </div>
  </main>
</Layout>
