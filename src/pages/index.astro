---
import ContactCard from "../components/ContactCard.astro";
import DiplomasAndTraining from "../components/DiplomasAndTraining.astro";
import PresentationCard from "../components/PresentationCard.astro";
import ProfessionalExperiences from "../components/ProfessionalExperiences.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Quentin LAURENT">
  <main class="lg:mx-24 mx-4 my-4 lg:my-8">
    <div class="flex flex-col lg:flex-row gap-4 lg:gap-12 lg:justify-center">
      <div class="flex flex-col gap-4 lg:gap-8 w-full lg:w-1/3">
        <PresentationCard />

        <ContactCard />
      </div>
      <div class="col-end-4 lg:w-1/2 w-full">
        <ProfessionalExperiences />
        <DiplomasAndTraining />
      </div>
    </div>
  </main>
</Layout>
